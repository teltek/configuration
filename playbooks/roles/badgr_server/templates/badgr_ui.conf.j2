[program:badgr_ui]
command=npm run server

priority=999
user={{ common_web_user }}

directory={{ badgr_ui_code_dir }}
environment=PORT={{ badgr_server_gunicorn_port }},ADDRESS={{ badgr_server_gunicorn_host }},LANG={{ BADGR_SERVER_LANG }},DJANGO_SETTINGS_MODULE={{ BADGR_SERVER_ENV }},SERVICE_VARIANT="badgr_ui",PATH="{{ badgr_server_deploy_path }}",HOME="/"

stdout_logfile={{ supervisor_log_dir }}/%(program_name)s-stdout.log
stderr_logfile={{ supervisor_log_dir }}/%(program_name)s-stderr.log
killasgroup=true
stopasgroup=true
