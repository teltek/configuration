[program:badgr_server]
command={{ badgr_server_venv_bin }}/python {{ badgr_server_code_dir }}/manage.py runserver {{ BADGR_SERVER_PYTHON_PORT }} --settings=apps.mainsite.settings_local

priority=999
user={{ common_web_user }}
directory={{ badgr_server_code_dir }}
environment=PORT={{ badgr_server_gunicorn_port }},ADDRESS={{ badgr_server_gunicorn_host }},LANG={{ BADGR_SERVER_LANG }},DJANGO_SETTINGS_MODULE={{ BADGR_SERVER_ENV }},SERVICE_VARIANT="badgr_server",PATH="{{ badgr_server_deploy_path }}",HOME="/"
stdout_logfile={{ supervisor_log_dir }}/%(program_name)s-stdout.log
stderr_logfile={{ supervisor_log_dir }}/%(program_name)s-stderr.log
killasgroup=true
stopasgroup=true
